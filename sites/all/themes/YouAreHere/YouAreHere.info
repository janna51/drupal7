; Info for the admin themes page
; ------------------------------
name = YouAreHere
description = Basic Drupal theme with core theme overrides, css and javascript files. Includes normalize.css.
screenshot = screenshot.png

; Set the Drupal version this theme can be used with
; ------------------------------
core = 7.x

; For sub-themes, uncomment 'base theme' and comment out 'engine'
; ------------------------------
; base theme =
engine = phptemplate

; Regions
; ------------------------------
;regions[header] = Header
;regions[toolnav] 	= Tool Navigation
;regions[top_menu] 	= Top Main Menu

;regions[highlighted] = Highlighted
regions[sidebar_first] = Left sidebar
regions[sidebar_second] = Right sidebar
regions[help] 		= Help
regions[content] 	= Main Content
regions[left_quicklinks] 	= Left Quicklinks
regions[full_width_section] 	= Full Width Section
regions[footer] = Footer

; Features
; ------------------------------
features[] = logo
features[] = name
features[] = slogan
features[] = node_user_picture
features[] = comment_user_picture
features[] = favicon
features[] = main_menu
features[] = secondary_menu

; Stylesheets
; ------------------------------
stylesheets[all][]   = css/YouAreHere.css
stylesheets[print][] = css/print.css

